%link{href: "https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css", rel: "stylesheet"}/
.sidebar
  .logo-details
    = image_tag '/logo-w.png', class: 'h-8 icon'
    %i#btn.bx.bx-menu
  %ul.nav-list
    -if request.path == "/home"
      %li
        %a{href: "/home", class: "active"}
          %i.bx.bx-football.iconactive
          %span.links_name.nameactive Dashboard 
        %span.tooltip.nameactive Dashboard
    -else
      %li
        %a{href: "/home"}
          %i.bx.bx-football
          %span.links_name Dashboard 
        %span.tooltip Dashboard
    - Futengage.where('day >= ?', Time.now).each do |futengage|    
      - if request.path == "/futengages/#{futengage.id}"
        %li
          %a{href: "/futengages/#{futengage.id}", class: "active"}
            %i.bx.bx-calendar-event.iconactive
            %span.links_name.nameactive 
              = futengage.name
          %span.tooltip.nameactive 
            = futengage.name
      -else
        %li
          %a{href: "/futengages/#{futengage.id}"}
            %i.bx.bx-calendar-event
            %span.links_name 
              = futengage.name
          %span.tooltip 
            = futengage.name
    -if request.path == "/histories"
      %li
        %a{href: "/histories", class: "active"}
          %i.bx.bx-history.iconactive
          %span.links_name.nameactive Ultimos jogos 
        %span.tooltip.nameactive Ultimos jogos
    -else
      %li
        %a{href: "/histories"}
          %i.bx.bx-history
          %span.links_name Ultimos jogos 
        %span.tooltip Ultimos jogos  
    -if request.path == "/configs"
      %li
        %a{href: "/configs", class: "active"}
          %i.bx.bx-cog.iconactive
          %span.links_name.nameactive Configurações 
        %span.tooltip.nameactive Configurações
    -else
      %li
        %a{href: "/configs"}
          %i.bx.bx-cog
          %span.links_name Configurações 
        %span.tooltip Configurações     
    -if request.path == "/futengages/new"
      %li
        %a{href: "/futengages/new", class: "active"}
          %i.bx.bx-plus-circle.iconactive
          %span.links_name.nameactive Criar jogo
        %span.tooltip.nameactive Criar jogo
    -else
      %li
        %a{href: "/futengages/new"}
          %i.bx.bx-plus-circle
          %span.links_name Criar jogo 
        %span.tooltip Criar jogo         
    %li.profile
      .profile-details
        -if current_user.avatar.attached?
          = image_tag url_for(current_user.avatar), class: 'profile-image'
        -else 
          = image_tag '/avatar.png', class: 'profile-image'  
        .name_position
          .name_position
            = current_user.first_name
          .name_position 
            = current_user.last_name
      = button_to destroy_user_session_path, method: :delete, form: {  data: { turbo: false }} do    
        %i#log_out.bx.bx-log-out
