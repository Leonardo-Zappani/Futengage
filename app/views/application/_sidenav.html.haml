%link{href: "https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css", rel: "stylesheet"}/
.sidebar
  .logo-details
    = image_tag '/logo-w.png', class: 'h-8 icon'
    %i#btn.bx.bx-menu
  %ul.nav-list
    -if request.path != "/history" && request.path != "/config"
      %li
        %a{href: "home", class: "active"}
          %i.bx.bx-football.iconactive
          %span.links_name.nameactive Dashboard 
        %span.tooltip.nameactive Dashboard
    -else
      %li
        %a{href: "home"}
          %i.bx.bx-football
          %span.links_name Dashboard 
        %span.tooltip Dashboard
    -if request.path == "/history"
      %li
        %a{href: "history", class: "active"}
          %i.bx.bx-history.iconactive
          %span.links_name.nameactive Ultimos jogos 
        %span.tooltip.nameactive Ultimos jogos
    -else
      %li
        %a{href: "history"}
          %i.bx.bx-history
          %span.links_name Ultimos jogos 
        %span.tooltip Ultimos jogos  
    -if request.path == "/config"
      %li
        %a{href: "config", class: "active"}
          %i.bx.bx-cog.iconactive
          %span.links_name.nameactive Configurações 
        %span.tooltip.nameactive Configurações
    -else
      %li
        %a{href: "config"}
          %i.bx.bx-cog
          %span.links_name Configurações
        %span.tooltip Configurações          
    %li.profile
      .profile-details
        -if current_user.avatar.attached?
          = image_tag current_user.avatar, class: "profile-image"   
        -else
          = image_tag '/picture.png', class: "profile-image"
        .name_position
          .name_position
            = current_user.first_name
          .name_position 
            = current_user.last_name
      = button_to destroy_user_session_path, method: :delete, form: {  data: { turbo: false }} do    
        %i#log_out.bx.bx-log-out
