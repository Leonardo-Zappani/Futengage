.block{ class: dom_id(avatable, :avatar) }
  - if avatable.avatar.attached?
    .avatar.avatar--md
      = image_tag avatable.avatar.variant(resize_to_limit: [100, 100])
  - else
    .flex.items-center.justify-center.h-10.w-10.bg-gray-300.rounded-full
      = heroicon icon, variant: :solid, options: { class: 'h-6 w-6 text-gray-500 rounded-full' }