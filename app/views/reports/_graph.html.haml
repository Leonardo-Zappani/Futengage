.flex.items-center.justify-center.sm.space-x-6.pt-3
  .block.animate__animated.animate__pulse.animate__faster
    -if params[:graph] != "out_per_day_graph" && params[:graph] != "in_per_day_graph"
      = pie_chart  @response, title: t("reports.#{params[:graph]}.title"), percentage: true, donut: true, legend: @response.count > 25 ? false : "bottom" , round: 2, |
        zeros: true,thousands: ",", loading: "Loading...", refresh: 60,  prefix: Current.account&.default_currency + " ", width: "1000px", height: "550px",          |
        download: { filename: t("reports.#{params[:graph]}.title").gsub(/\s/, '_') + Current.account.name, background: "#ffffff" }                                  |
    -else
      = column_chart @response, title: t("reports.#{params[:graph]}.title"), percentage: true, donut: true, legend: @response.count > 25 ? false: "bottom" , round: 2, |
      zeros: true,thousands: ",", loading: "Loading...", refresh: 60,  prefix: Current.account&.default_currency + " ", width: "800px", height: "450px",              |
      download: { filename: t("reports.#{params[:graph]}.title").gsub(/\s/, '_') + Current.account.name, background: "#ffffff" }                                     |
.stacked-list__hidden-col.stacked-list.stacked-paid-tittle.pt-3
  .flex
    .paragraph-base.form-group-checkbox.mt-2
      %h3
        = t("reports.#{params[:graph]}.subtitle")
      .paragraph-muted.pt-2
        = t("reports.#{params[:graph]}.recipe")
      -if !params[:order].present?
        = link_to reports_path(request.query_parameters.merge(order: "desc")) do
          %div
            .flex.pt-2
              .paragraph-base.form-group-checkbox.pr-6
                = t("reports.#{params[:graph]}.description")
              = heroicon "chevron-down", variant: :mini
      -elsif params[:order] == "asc"
        = link_to reports_path(request.query_parameters.merge(order: "desc")) do
          %div
            .flex.pt-2
              .paragraph-base.form-group-checkbox.pr-6
                = t("reports.#{params[:graph]}.description")
                = heroicon "chevron-down", variant: :mini
      -else
        = link_to reports_path(request.query_parameters.merge(order: "asc")) do
          %div
            .flex.pt-2
              .paragraph-base.form-group-checkbox.pr-6
                = t("reports.#{params[:graph]}.description")
              = heroicon "chevron-up", variant: :mini

  - @response.each do |response|
    .flex
      .paragraph-base.form-group-checkbox.mt-2
        .paragraph-base
          = Category.human_attribute_name(response[0])
      .form-group-checkbox.mt-2
        = Money.from_amount(response[1]).format