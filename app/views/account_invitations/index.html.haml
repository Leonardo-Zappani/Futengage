= turbo_frame_tag :account_invitations_index do
  .card.overflow-hidden
    %h6.text-center.px-3.py-1.5.border-b.bg-gray-50= AccountInvitation.model_name.human(count: 2)
    = render(Table::TableComponent.new) do |table|
      - table.header do |header|
        - header.col(classes: 'c-table__column--description') { "#{AccountInvitation.human_attribute_name(:name)}/#{AccountInvitation.human_attribute_name(:email)}" }
        - header.col(classes: 'c-table__column--description') { AccountInvitation.human_attribute_name(:role) }
        - header.col(classes: 'c-table__column--datetime hidden xl:flex') { AccountInvitation.human_attribute_name(:updated_at) }
        - header.col(classes: 'c-table__column--actions')
      - table.body(id: :account_invitations) do
        = render @records
        %p.px-base.py-base.text-gray-500#empty_state{ class: !@records.empty? && 'hidden' }= t('.there_are_not_pending_invites')
        -# = render 'empty_state', hidden: @records.any?,
        -#                         is_search: params[:q].present?,
        -#                         add_path: new_account_invitation_path,
        -#                         clear_path: account_invitations_path,
        -#                         options: { data: { turbo_frame: 'drawer' } }

  = render(Page::PaginatorComponent.new(paginator: @pagy))