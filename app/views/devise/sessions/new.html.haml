=render 'canvas'
.devise__layout.absolute
  .devise__left
    .devise__container
      .devise__header
        %h2.devise__title= 'Entrar'
        %img{:src => "/logo1.png" , class: 'fill-green-600 h-8 w-auto'} 
      .devise__content
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise__form', 'data-turbo': false }) do |f|
          = render 'alert'
          = render 'notice'
          .form-group
            = f.label "Email", class: 'form-label'
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
          .form-group
            = f.label "Senha", class: 'form-label'
            = f.password_field :password, autocomplete: "current-password", class: 'form-control'
          - if devise_mapping.rememberable?
            .form-group-checkbox
              = f.check_box :remember_me, class: 'form-control-checkbox'
              = f.label :remember_me, class: 'form-label-checkbox'
          .form-group
            = f.submit "Entrar", class: "btn btn--primary"
      = render "devise/shared/links"
      = render 'devise/shared/footer'