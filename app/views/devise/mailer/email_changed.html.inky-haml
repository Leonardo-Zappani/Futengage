%row
  %columns
    %h4= t(".subject")

%spacer{ size: '16' }

%row
  %columns
    %p= t(".greeting", recipient: @email)
    - if @resource.try(:unconfirmed_email?)
      %p= t(".message_unconfirmed", email: @resource.unconfirmed_email)
    - else
      %p= t(".message", email: @resource.email)


%spacer{ size: '16' }
