= form_for @contact do |f|
  - if @contact.errors.any?
    = render 'errors', errors: @contact.errors
  .flex.flex-col.space-y-4.sm:space-y-6.pb-6
    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control', autofocus: true
    .form-group
      = f.label :contact_type, class: 'form-label'
      = f.select :contact_type, enum_option_pairs(Contact, :contact_type), {}, class: 'form-control'
    .form-group
      = f.label :person_type, class: 'form-label'
      = f.select :person_type, enum_option_pairs(Person, :person_type), {}, class: 'form-control'
    .form-group
      = f.label :document_1, class: 'form-label'
      = f.text_field :document_1, class: 'form-control', data: { controller: 'cpf-cnpj' }
    .form-group
      = f.label :document_2, class: 'form-label'
      = f.text_field :document_2, class: 'form-control'
    .form-group
      = f.label :email, class: 'form-label'
      = f.email_field :email, class: 'form-control'
    .form-group
      = f.label :phone_number, class: 'form-label'
      = f.text_field :phone_number, class: 'form-control', data: { controller: 'phone-number' }
    .form-group.flex.items-center.space-x-1.5.sm:space-x-3
      .avatar
        - if @contact.avatar.attached?
          = image_tag @contact.avatar.variant(resize_to_limit: [100, 100])
        - else
          = image_tag 'avatar_placeholder.png'
      = f.file_field :avatar, class: 'form-input-file flex-1', direct_upload: true
    .form-group
      = f.label :description, class: 'form-label'
      = f.text_area :description, class: 'form-control', data: { controller: 'textarea-autogrow' }

    .form-group.mb-6
      = f.submit class: "btn btn--primary"
