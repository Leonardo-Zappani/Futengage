=turbo_frame_tag "add_place" do 
  = form_with url: teams_create_place_path, method: :post  do |f|
    %h4.text-white.devise__header.pt-2 Criar novo local
    .form-group.pt-4
      = f.label "Nome do lugar", class: 'form-label text-white'
      = f.text_field :name, placeholder: "Digitar nome do lugar", class: 'form-control'
      = f.hidden_field :team_id, :value => request.path.gsub(/[^0-9]/, '')
    .form-group.pt-4
      = f.label "Endereço", placeholder: "20h", class: 'form-label text-white text-white'
      = f.text_field :address, placeholder: "Informe o endereço", class: 'form-control'  
    .form-group.pt-4
      = f.label "Dia da semana", placeholder: "20h", class: 'form-label text-white text-white'
      = f.text_field :day, placeholder: "Informe o dia da semana" , class: "form-control" 
      = f.hidden_field :owner_id, :value => current_user.id
    .form-group.pt-4
      = f.label "Horário" ,placeholder: "Futengage", class: 'form-label text-white'
      = f.text_field :time, placeholder: "Informe o horário dos jogos", class: 'form-control'
    .form-group.pt-4
      = f.label "Maximo de jogadores" ,placeholder: "Futengage", class: 'form-label text-white'
      = f.text_field :max_players, placeholder: "Informe o número maximo de jogadores", class: 'form-control'  
    .actions.pt-4
      = f.submit "Salvar", class: "btn btn--primary"
    