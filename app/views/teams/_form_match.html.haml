=turbo_frame_tag "create_match" do 
  = form_with url: teams_create_match_path, method: :post  do |f|
    .devise__form
      .form-group
        %h4.text-white.devise__header.pb-2 Criar nova partida
        = f.label "Local da partida",placeholder: "Digite o nome", class: 'form-label text-white'
        = f.select :place_id, Team.find(params[:id]).places.pluck(:name), {}, { class: "form-control" }
      .form-group
        = f.label "Dia",placeholder: "Dia da partida", class: 'form-label text-white'
        = f.date_field :time, value: "#{Time.now.year}-0#{Time.now.month}-#{Time.now.day}", class: 'form-control'
        = f.hidden_field :team_id, :value => request.path.gsub(/[^0-9]/, '')
        = f.hidden_field :user_id, :value => current_user.id
      .actions.pt-4
        = f.submit "Agendar nova partida", class: "btn btn--primary" 