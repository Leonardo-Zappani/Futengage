= render(Table::ItemComponent.new(item: pagamento, classes: 'group', link: edit_pagamento_path(pagamento), options: { data: { turbo_frame: 'drawer' } })) do |item|
  - item.col(classes: 'c-table__column--actions') do
    = button_to edit_pagamento_path(pagamento), method: :get, onclick: 'event.stopPropagation()', data: { turbo_frame: 'drawer' }, class: 'btn-circle btn-circle--primary hidden group-hover:flex' do
      = heroicon 'pencil', options: { class: 'btn-circle__icon' }
    = button_to pagamento, method: :delete, onclick: 'event.stopPropagation()', form: { data: { turbo_confirm: t('shared.are_you_sure?') } }, class: 'btn-circle btn-circle--danger hidden group-hover:flex' do
      = heroicon 'trash', options: { class: 'btn-circle__icon' }