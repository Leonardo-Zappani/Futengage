= turbo_frame_tag :revenues do

  %div{ width: 336, height: 130, data: {
        controller: 'revenues-chartjs',
        revenues_chartjs_data_value: @line_data.to_json,
        revenues_chartjs_percentage_value: number_with_precision(@percentage, precision: 0),
        revenues_chartjs_locale_value: I18n.locale,
        revenues_chartjs_currency_value: Money.default_currency,
        revenues_chartjs_paid_revenues_label_value: t('transactions.totalizer.revenue_paid'),
        revenues_chartjs_unpaid_revenues_label_value: t('transactions.totalizer.revenue_unpaid'),
        revenues_chartjs_paid_expenses_label_value: t('transactions.totalizer.expense_paid'),
        revenues_chartjs_unpaid_expenses_label_value: t('transactions.totalizer.expense_unpaid'),
        revenues_chartjs_outcome_label_value: t('.outcome') }}

  .block.w-full.animate__animated.animate__fadeIn.animate__faster
    .block.text-gray-500= t('transactions.revenues.revenues')
    %hr
    .grid.grid-cols-3.w-full.animate__animated.animate__pulse.animate__faster
      .col-span-3.flex.items-center.space-x-2
      .truncate.text-xs.text-success-500= t('transactions.revenues.paid_revenues')
      .col-span-2.text-xs.font-medium.text-success-500.text-right= @paid_revenues.format
      .truncate.text-xs.text-success-500= t('transactions.revenues.lack')
      .col-span-2.text-xs.font-medium.text-success-500.text-right= (@expected_revenues - @paid_revenues).format
      %hr
      %hr
      %hr
      .truncate.text-xs.text-gray-500= t('transactions.revenues.prev_revenues')
      .col-span-2.text-xs.font-medium.text-gray-500.text-right= @expected_revenues.format
