= form_for @bank_account do |f|
  - if @bank_account.errors.any?
    = render 'errors', errors: @bank_account.errors
  .flex.flex-col.space-y-4.sm:space-y-6.pb-6
    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :account_type, class: 'form-label'
      = f.select :account_type, enum_option_pairs(BankAccount, :account_type), {}, class: 'form-control'
    .form-group
      = f.label :initial_balance_cents, class: 'form-label'
      = f.text_field :initial_balance_cents, class: 'form-control text-right', data: currency_data_params
      = f.hidden_field :initial_balance_currency
    .form-group
      = f.label :balance_cents, class: 'form-label'
      = f.text_field :balance_cents, disabled: true, class: 'form-control text-right', data: currency_data_params
      = f.hidden_field :balance_currency
    .form-group
      = f.submit class: "btn btn--primary"