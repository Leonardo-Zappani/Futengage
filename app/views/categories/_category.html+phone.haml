%li{ id: dom_id(category) }
  = link_to edit_category_path(category), data: { turbo_frame: 'drawer' }, class: 'stacked-list__item' do
    .stacked-list__layout
      .stacked-list__left
        .stacked-list__content
          .stacked-list__details
            .paragraph-base= category.name
            .paragraph-muted= category.description
      .stacked-list__actions
        - if can? :destroy, category
          = button_to category, method: :delete, onclick: "event.stopPropagation()", form: { data: { turbo_confirm: t('shared.are_you_sure?') } }, data: { controller: :tooltip, tooltip_content_value: t('shared.remove') }, class: 'btn-circle btn-circle--danger' do
            = heroicon 'trash', options: { class: 'btn-circle__icon' }