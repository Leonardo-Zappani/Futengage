= render TurboDrawerComponent.new(title: t(".title")) do
  = form_for transaction, url: create_recurrence_transaction_path(transaction), html: { class: 'relative' } do |f|
    = hidden_field_tag :month, month
    = hidden_field_tag :bank_account_id, bank_account_id
    = hidden_field_tag :transaction_type, transaction_type

    .grid.grid-cols-1.gap-y-6.gap-x-4.sm:grid-cols-2
      .form-group.col-span-1
        = f.label :installment_total, class: 'form-label'
        = f.number_field :installment_total, class: 'form-control', in: 1..36, step: 1
      .form-group.col-span-1
        = f.label :installment_type, class: 'form-label'
        = f.select :installment_type, enum_option_pairs(Transaction, :installment_type), {}, data: { controller: 'select' }
      .form-group.col-span-2
        = f.submit t('shared.create_transactions'), class: "btn btn--primary"
